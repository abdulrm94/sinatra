<form action="/named-cat">
    <input type="text" id="name" name="name" placeholder="name">
    <input type="submit" value="submit">
</form>

<h2>
  <% if @name.length < 1 || @name == "stranger" || @name == "" %>  
    Hello <%= @name %>. Give me a name.
  <% else %>
    Hello <%= @name %>! Thanks for giving me your name.
  <% end %>
</h2>

<img src="https://i.imgur.com/jFaSxym.png" alt="Picture of a cat" style="border: dashed red; width: 200px;">
